[user]
	name = Hiroyuki Inoue
	email = mammymax@gmail.com

[alias]
	ci = commit
	st = status
	br = branch
	co = checkout
	ap = add -p
	cim = commit -m
	dmb = !git branch --merged | grep -v 'master' | xargs -I % git branch -d %
	delete-merged-branches = !git branch --merged | grep -v 'master' | xargs -I % git branch -d %

[color]
	ui = true

[include]
	path = ./.gitconfig.local

[core]
	excludesfile = /Users/inohiro/.gitignore_global
	autocrlf     = input

[grep]
	linenumber = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
