// Mac: $HOME/Library/Application Support/Code/User/settings.json
{
    "editor.fontFamily": "'Moralerspace Krypton', 'Moralerspace Argon', 'Monaco', 'IBM Plex Mono', HackGen, Monaco, 'Source Code Variable', 'Ricty Regular', Menlo, 'Courier New', monospace",
    "editor.fontSize": 16,
    "files.associations": {
        "*.sql.job": "sql",
        "*.rb.job": "ruby",
        "*.sh.job": "shellscript",
        "*.job": "yaml",
        "*.ct": "sql",
        "*.cv": "sql",
        "*.jsonnet": "javascript",
        "*.yml.liquid": "yaml",
        "*.erb": "ruby"
    },
    "[sql]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[ruby]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "Shopify.ruby-lsp",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "editor.rulers": [
            120
        ],
        "editor.semanticHighlighting.enabled": true
    },
    "extensions.ignoreRecommendations": false,
    "window.openFilesInNewWindow": "on",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "explorer.confirmDelete": false,
    "editor.renderControlCharacters": true,
    "workbench.iconTheme": "material-icon-theme",
    "tdqt.key": true,
    "python.defaultInterpreterPath": "/Users/hiroyukiinoue/.pyenv/versions/3.8.0/bin/python",
    "python.showStartPage": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb",
        "git-rebase-todo": "gitlens.rebase"
    },
    "terminal.integrated.fontSize": 16,
    "editor.bracketPairColorization.enabled": true,
    "redhat.telemetry.enabled": false,

    "ruby.useLanguageServer": true,
    "ruby.intellisense": "rubyLocate",
    "workbench.startupEditor": "none",
    "trailing-spaces.deleteModifiedLinesOnly": true,
    "editor.smartSelect.selectLeadingAndTrailingWhitespace": false,
    "[python]": {
    },
    "editor.minimap.enabled": false,
    "settingsSync.ignoredExtensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime"
    ],
    "git.openRepositoryInParentFolders": "always",
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "gitlens.graph.minimap.enabled": false,
    "gitlens.currentLine.enabled": false,
    "editor.stickyScroll.defaultModel": "indentationModel",
    "editor.stickyScroll.maxLineCount": 7,
    "editor.renderWhitespace": "boundary",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.inlineSuggest.showToolbar": "always",
    "workbench.settings.applyToAllProfiles": [
        "files.trimTrailingWhitespace"
    ],
    "editor.trimAutoWhitespace": false,
    "workbench.colorTheme": "Atom One Dark",
    "rubyLsp.addonSettings": {},
    "rubyLsp.linters": null,
    "github.copilot.nextEditSuggestions.enabled": false,
    "docker.extension.enableComposeLanguageServer": false
}